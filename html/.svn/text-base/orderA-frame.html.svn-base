<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>底部导航</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
     <link rel="stylesheet" type="text/css" href="../css/common.css"/>
     <link rel="stylesheet" type="text/css" href="../css/DateTimePicker.css" />
	 <script type="text/javascript" src="../script/jquery-1.11.0.min.js"></script>
	 <script type="text/javascript" src="../script/DateTimePicker.js"></script>
    <style>
        html, body {
            height: 100%;
            width: 100%;
        }

        #wrap {
            height: 100%;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-flex-flow: column;
            flex-flow: column;
        }


        #main {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
            flex: 1;
            background:#F8F8F8;
        }
       
       #notice {
        position:relative ;
        margin-top:10px;
       padding-top:20px;
       height:80px;
       width:100%;
       background:url(../image/glass.jpg) no-repeat center center;
       background-size:cover;
       text-align:center;
       background-color:#FFFFFF;
        
       }
    #notice p{
      color: gray;
      position: relative;
      margin-top:60px;
      font-size: 0.8em;
      width:100%;
      background-color:#3BC173;
      padding-top:5px;
      padding-bottom:5px;   
      color:#FFFFFF;   
    
    }
    
    /*item*/
   /* 设置条目 */	
		.item {height: 50px;line-height: 50px;padding-left: 15px;background-color: #fff;}	
		.item_ico {float: left;width: 30px;padding: 10px 10px 10px 0;}	
		.item_arrow {float: right;width: 16px;padding: 17px 15px 15px 0;}	
	
		.presshover {background-color: #FAFAFA;}
		.h1 {height: 1px;margin-left: 15px;background: #f0f0f0;}
   input{position:relative; width:75%;height: 50px;/*line-height: 50px;font-size:24px;*/top:1px;}
    #charge{
       width:100%;
       height:60px;
       margin:0 auto;
       /*background:url(../image/tm_brand_11_tab.png) no-repeat center center;*/
       position: absolute;
       bottom: 5px;
    }
    
    #charge button{
      display:block;
       position:relative;
       width:90%;
       height:40px;
       margin:0 auto;
       background-color:#3BC173;
       color:#FFFFFF; 
    }
    
    .none{
     display:none;
    }
    
   
    </style>
</head>
<body>
<div id="wrap">
   
    <div id="main">
             <div id="notice">
               <p>价格：12元/平，120元起&nbsp;&nbsp;更多详情>></p>
             
             </div>

		
		<div class="secondblock">	
		<div class="item" tapmode="presshover" onclick="">	
			<img src="../image/my_favorite_user_icon_normal.png" alt="" class="item_ico">	
			<span id="dtBox"></span>	
			<input type="text" id="time" data-field="datetime" data-format="yyyy-MM-dd hh:mm:ss" placeholder="请选择服务时间" readonly>
			<img src="../image/arrow.png" alt="" class="item_arrow">	
		</div><div class="h1"></div>	
		<div class="item" tapmode="presshover" onclick="openaddress()">	
			<img src="../image/my_history_user_icon_normal.png" alt="" class="item_ico">	
			<span id="nameaddr">请输入服务地址</span>	
			<img src="../image/arrow.png" alt="" class="item_arrow">	
		</div><div class="h1"></div>	
		<div class="item none" tapmode="presshover" onclick="">	
			<img src="../image/my_review_user_icon_normal.png" alt="" class="item_ico">	
			<span>填写房屋平米数</span>	
			<img src="../image/arrow.png" alt="" class="item_arrow">	
		</div><div class="h1"></div>
		<div class="item" tapmode="presshover" onclick="openvoucher()">	
			<img src="../image/my_setting_user_icon_normal.png" alt="" class="item_ico">	
			<span>优惠券</span>	
			<img src="../image/arrow.png" alt="" class="item_arrow">	
		</div><div class="h1"></div>	
		<div class="item" tapmode="presshover" onclick="openplus()">	
			<img src="../image/my_setting_user_icon_normal.png" alt="" class="item_ico">	
			<span id="plus">填写更多个性需求</span>	
			<img src="../image/arrow.png" alt="" class="item_arrow">	
		</div><div class="h1"></div>		
	</div>	
			
		    <div id="charge">
             <button tapmode onclick="suborder()">提交订单</button>  
             
             </div>
    </div>
    
</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
   $(document).ready(function()
			{
				$("#dtBox").DateTimePicker(
				
				);
			});
    apiready = function () {
        
     
    }
   function openaddress(){
	  api.openWin({
	        name: 'address',
	        url: 'order-address.html'
        });
	}	
	function openvoucher(){
	
	 api.openWin({
	        name: 'voucher',
	        url: 'voucher.html'
        });
	
	}
	
	function openplus(){
	
	 api.openWin({
	        name: 'plus',
	        url: 'order-plus.html'
        });
	
	}
	function suborder(){
	    $api.setStorage('orderadd',$api.text($api.byId('nameaddr')));
	    $api.setStorage('time',$api.val($api.byId('time')));
	     $api.setStorage('plus',$api.text($api.byId('plus')));
//	    api.execScript({
//		      name:'suborder',
//		      frameName: 'suborderframe',
//			  script: 'update();'
//		  });
	    
		api.openWin({
		        name: 'suborder',
		        url: 'order-pro-win.html'
	        });
	
	}
	
	
	function update(){
      
	  var nameaddr= $api.getStorage('nameaddr');  
//	   alert('orderA nameaddr:'+nameaddr)
      	  
	  $api.text($api.byId('nameaddr'), nameaddr);
	  
	  
	     
	  return;

	}
	function updateplus(){
      
	    
	  
	   var plus = $api.getStorage('plus');
	   $api.text($api.byId('plus'), plus);    
	  return;

	}
</script>
</html>