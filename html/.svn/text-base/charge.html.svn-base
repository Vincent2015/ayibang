<script type="text/javascript">
apiready = function(){
    var header = $api.byId('header');
    $api.fixIos7Bar(header);
	
}
function savemsg(){
  api.showProgress({
   title: '交易中',
  });
  setTimeout(function(){
       api.hideProgress();
     },50000);
     
  api.closeWin();

}
function change(el){
//	el.src= "../image/icon_success.png";
	
	// $api.css(el,'src:"../image/icon_success.png"');
	var ellist = $api.domAll('.info-right');
//	alert('ellist.length'+ellist.length);
	for(i=0;i<ellist.length;i++){
	   
	  var el2= $api.first(ellist[i],'img');
	  
	  if($api.attr(el2,'data-id')==$api.attr(el,'data-id'))
	    {
	     el2.src="../image/icon_success.png";
	    }
	    else{
	      el2.src="../image/icon_submit_2.png";
	    }
	 }    
}
